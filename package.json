{
  "name": "playwright-automation-framework",
  "version": "1.0.0",
  "description": "Professional Playwright test automation framework with TypeScript, POM, Design Patterns, and best practices",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:ci": "playwright test --reporter=html,allure-playwright",
    "report": "playwright show-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "e2e",
    "page-object-model",
    "design-patterns"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3"
  }
}
